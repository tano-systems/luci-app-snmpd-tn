{
	"luci-app-tn-snmpd-config": {
		"description": "Grant access to SNMP configuration",
		"read": {
			"uci": [ "snmpd", "luci", "luci_snmpd" ],
			"file": { "/usr/share/snmp/mibs/*": [ "read", "stat" ] },
			"ubus": {
				"luci": [ "getInitList" ],
				"file": [ "read", "stat" ]
			}
		},
		"write": {
			"uci": [ "snmpd" ],
			"ubus": {
				"luci": [
					"setInitAction"
				]
			}
		}
	},

	"luci-app-tn-logview-snmpd" : {
		"description": "Grant access to view SNMP log",
		"read": {
			"file": { "/usr/libexec/luci-logview/logview-snmpd *": [ "exec" ] },
			"ubus": { "file": [ "exec" ] }
		}
	}
}
